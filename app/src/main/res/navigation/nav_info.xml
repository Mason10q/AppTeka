<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_info"
    app:startDestination="@id/infoFragment">

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.appteka.ui.info.InfoFragment"
        android:label="fragment_about_app"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_instructionFragment"
            app:destination="@id/instructionFragment" />
        <action
            android:id="@+id/action_infoFragment_to_aboutAuthorFragment"
            app:destination="@id/aboutAuthorFragment" />
        <action
            android:id="@+id/action_infoFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.appteka.ui.info.AboutAppFragment"
        android:label="AboutAppFragment" />
    <fragment
        android:id="@+id/aboutAuthorFragment"
        android:name="com.example.appteka.ui.info.AboutAuthorFragment"
        android:label="AboutAuthorFragment" />
    <fragment
        android:id="@+id/instructionFragment"
        android:name="com.example.appteka.ui.info.InstructionFragment"
        android:label="InstructionFragment" />

</navigation>